
public class StrinhreverseusingMeth {
	public static void main(String[] args) {
		String str="PANKAJ KUMAR RAVI";
		Reverse(str);
	}
	static String rev=" ";
	private static String Reverse(String str) {
		char ch[]=str.toCharArray();
		for(int i=ch.length-1;i>=0;i--)
		{
		rev=rev+ch[i];
		}
		return rev;
	}
}
